@model SocialBookmarkApp.Models.Comment

<h2>Editare comentariu</h2>

<form asp-action="Edit" asp-controller="Comment" asp-route-id="@Model.Id" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="BookmarkId" />

    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Salveaza</button>
    <a class="btn btn-secondary" asp-controller="Bookmark" asp-action="Show" asp-route-id="@Model.BookmarkId">Renunta</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}