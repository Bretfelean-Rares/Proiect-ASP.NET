@model SocialBookmarkApp.Models.ApplicationUser

<div class="row align-items-start mb-4">
    <div class="col-md-3">
        @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
        {
            <img src="@Model.ProfileImageUrl"
                 class="img-fluid rounded"
                 style="max-height:200px; object-fit:cover;" />
        }
        else
        {
            <div class="d-flex align-items-center justify-content-center"
                 style="height:200px;">
                <i class="bi bi-person-circle"
                   style="font-size:5rem; color:#adb5bd;"></i>
            </div>
        }
    </div>

    <div class="col-md-9">
        <h2 class="mb-2">
            @if (!string.IsNullOrEmpty(Model.FirstName) || !string.IsNullOrEmpty(Model.LastName))
            {
                @($"{Model.FirstName} {Model.LastName}")
            }
            else
            {
                @Model.UserName
            }
        </h2>

        <div class="text-muted mb-3">@Model.UserName</div>

        @if (!string.IsNullOrEmpty(Model.About))
        {
            <p><b>About:</b> @Model.About</p>
        }
        else
        {
            <p class="text-muted"><b>About:</b> (nu are descriere)</p>
        }
    </div>
</div>

<hr />

<div class="row mt-4">
    <!-- StÃ¢nga: Bookmark-uri -->
    <div class="col-lg-6 mb-4">
        <h3>Bookmark-uri publice</h3>

        @if (Model.Bookmarks != null && Model.Bookmarks.Any())
        {
            foreach (var b in Model.Bookmarks)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@b.Title</h5>
                        <p class="card-text">@b.Description</p>

                        <a class="btn btn-primary w-100"
                           asp-controller="Bookmark"
                           asp-action="Show"
                           asp-route-id="@b.Id">
                            Vezi
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Nu exista bookmark-uri publice.</p>
        }
    </div>

    <!-- Dreapta: Categorii -->
    <div class="col-lg-6 mb-4">
        <h3>Categorii</h3>

        @if (ViewBag.Categories != null && ((List<SocialBookmarkApp.Models.Category>)ViewBag.Categories).Any())
        {
            foreach (var c in (List<SocialBookmarkApp.Models.Category>)ViewBag.Categories)
            {
                <div class="card mb-3">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">@c.CategoryName</h5>
                            <small class="text-muted">@(c.IsPublic ? "Publica" : "Privata")</small>
                        </div>

                        <a class="btn btn-outline-primary"
                           asp-controller="Category"
                           asp-action="Show"
                           asp-route-id="@c.Id">
                            Vezi
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Nu exista categorii.</p>
        }
    </div>
</div>