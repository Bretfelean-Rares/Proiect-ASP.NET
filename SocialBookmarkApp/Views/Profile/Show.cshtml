@model SocialBookmarkApp.Models.ApplicationUser

<div class="row align-items-start mb-4">
    <div class="col-md-3">
        @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
        {
            <img src="@Model.ProfileImageUrl"
                 class="img-fluid rounded border"
                 style="max-width: 220px;"
                 alt="Profile picture" />
        }
        else
        {
            <div class="border rounded p-4 text-center text-muted">
                Fără poză
            </div>
        }
    </div>

    <div class="col-md-9">
        <h2 class="mb-2">
            @if (!string.IsNullOrEmpty(Model.FirstName) || !string.IsNullOrEmpty(Model.LastName))
            {
                @($"{Model.FirstName} {Model.LastName}")
            }
            else
            {
                @Model.UserName
            }
        </h2>

        <div class="text-muted mb-3">@Model.UserName</div>

        @if (!string.IsNullOrEmpty(Model.About))
        {
            <p><b>About:</b> @Model.About</p>
        }
        else
        {
            <p class="text-muted"><b>About:</b> (nu are descriere)</p>
        }
    </div>
</div>

<hr />

<h4>Bookmark-uri publice</h4>

@if (Model.Bookmarks != null && Model.Bookmarks.Any())
{
    @foreach (var b in Model.Bookmarks)
    {
        <div class="card mb-2 p-2">
            <h5>@b.Title</h5>
            <p>@b.Description</p>
            @if (!string.IsNullOrEmpty(b.MediaContent))
            {
                if (b.MediaContent.StartsWith("http"))
                {
                    <img src="@b.MediaContent"
                         class="img-fluid rounded mb-2"
                         alt="Bookmark media" />
                }
                else
                {
                    <div class="ratio ratio-16x9 mb-2">
                        @Html.Raw(b.MediaContent)
                    </div>
                }
            }

            <a class="btn btn-sm btn-primary"
               asp-controller="Bookmark"
               asp-action="Show"
               asp-route-id="@b.Id">
                Vezi
            </a>
        </div>
    }
}
else
{
    <p>Acest utilizator nu are bookmark-uri publice.</p>
}