@model SocialBookmarkApp.Models.Category

<h2>Adauga categorie</h2>

<form asp-action="New" method="post">
    <div class="mb-3">
        <label class="form-label">Nume categorie</label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsPublic" class="form-check-input" />
        <label class="form-check-label">Categorie publica</label>
    </div>

    <button class="btn btn-success">Salveaza</button>
</form>